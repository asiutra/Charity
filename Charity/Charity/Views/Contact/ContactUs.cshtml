@model SendEmailViewModel
@{
    ViewBag.Title = "Skontaktuj się z nami!";
    Layout = "_Layout";
}


<div class="container" style="margin: 10% 0 10% 20%">
    <div id="contact" class="contact">
        <h2>Skontaktuj się z nami</h2>
        <form asp-controller="Contact" asp-action="ContactUs" method="post" class="form--contact">
            <div class="form-group form-group--50"><input type="text" asp-for="Name" placeholder="Imię" required/></div>
            <div class="form-group form-group--50"><input type="text" asp-for="Surname" placeholder="Nazwisko" required/></div>
            <div class="form-group form-group--50"><input type="email" asp-for="Email" placeholder="Email" required/></div>

            <div class="form-group">
                <textarea asp-for="Message" placeholder="Wiadomość" rows="1" required></textarea>
                <button class="btn" type="submit">Wyślij</button>
            </div>
        </form>
    </div>
</div>
