@model EditInstitutionViewModel
@{
    ViewBag.Title = "Edit institution";
    Layout = "_Layout";
}

<div class="container-fluid" style="margin: 5% 0 5% 0">
    <h2>Edycja danych instytucji</h2>
    <form asp-controller="Admin" asp-action="EditInstitution" method="post">

        <div class="my-form-group">
            <input class="my-form-control" type="text" asp-for="Name" placeholder="@Model.Name" />
            <span asp-validation-for="Name"></span><br />
            <input class="my-form-control" type="text" asp-for="Description" placeholder="Opis" />
            <span asp-validation-for="Description"></span><br /><br/>
            <button class="btn btn-outline-secondary" type="submit">Zapisz</button>
            <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="ShowInstitution">Anuluj</a>
        </div>

    </form>
</div>
